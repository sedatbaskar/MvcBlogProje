@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AuthorBlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AuthorBlogList</h2>

@{string color = ""; }
@{ string durum = "";}
<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Blog Listem</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                iD

                            </th>

                            <th style="width: 20%">

                                Blog Başlık

                            </th>


                            <th style="width: 20%">
                            <th>
                                Blok Değerlendirme Oranı

                            </th>

                            <th style="width: 8%" class="text-center">

                                Durum

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.BlogRating >= 85)
                            {
                                color = "post-category text-white bg-success mb-3";
                                durum = "Çok Başarılı";

                            }
                            if (item.BlogRating >= 70 && item.BlogRating <= 84)
                            {
                                color = "post-category text-white bg-info mb-3";
                                durum = "Başarılı";
                            }
                            if (item.BlogRating >= 50 && item.BlogRating <= 64)
                            {
                                color = "post-category text-white bg-info mb-3";
                                durum = "Orta";
                            }
                            if (item.BlogRating >= 0 && item.BlogRating <= 49)
                            {
                                color = "post-category text-white bg-danger mb-3";
                                durum = "Başarısız";
                            }




                            <tr>

                                <td>@item.BlogID</td>
                                <td>@item.BlogTitle</td>

                                <td class="project_progress">

                                    <div class="progress progress-sm">

                                        <div class="progress-bar bg-green" role="progressbar"
                                             aria-volumenow="@item.BlogRating" aria-volumemin="0" aria-volumemax="10" style="width:
                                             @item.BlogRating%">

                                        </div>

                                    </div>

                                    <small>

                                        Aldığı Değerlendirme Puanı:   @item.BlogRating

                                    </small>

                                </td>

                                <td class="project-state">



                                    <span class="badge @color">@durum </span>

                                </td>

                                <td class="project-actions text-right">


                                    <a class="btn btn-info btn-sm" href="/Blog/UpdateBlog/@item.BlogID ">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="#">

                                        <i class="fas fa-trash">

                                        </i>

                                        Sil

                                    </a>

                                </td>

                            </tr>
                        }
                    </tbody>

                </table>





            </div>



        </div>


    </section>
    <a href="/Blog/AddnewBlog/" class="btn btn-primary">Yeni Blog Yaz</a>
</body>

</html>